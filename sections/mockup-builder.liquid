{% comment %}
  Mockup Builder Section
  Handles product personalization with canvas for design uploads
{% endcomment %}

{%- if section.settings.show_mockup_builder -%}
  <!-- Load Fabric.js -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/fabric.js/5.3.0/fabric.min.js"></script>
  
  <div class="mockup-builder-section page-width section-{{ section.id }}-padding">
    <div class="mockup-builder-container">
      <div class="mockup-builder-header">
        <h2 class="mockup-builder-title">Personalize Your Product</h2>
        <p class="mockup-builder-description">Upload your design and see it on your product</p>
      </div>

      <div class="mockup-builder-content">
        <!-- Product Image Display (HTML/CSS approach) -->
        <div class="product-image-container">
          <img 
            id="product-background-image" 
            class="product-background-image"
            src="{{ product.selected_or_first_available_variant.featured_image | image_url: width: 700 }}"
            alt="{{ product.title }}"
            loading="lazy"
          >
        </div>

        <!-- Canvas for Design Uploads -->
        <div class="canvas-container">
          <canvas id="design-canvas" width="{{ section.settings.canvas_width }}" height="{{ section.settings.canvas_height }}"></canvas>
          
          <!-- Upload Controls -->
          <div class="upload-controls">
            <label for="design-upload" class="upload-button">
              <span class="upload-icon">üìÅ</span>
              <span class="upload-text">Upload Design</span>
            </label>
            <input 
              type="file" 
              id="design-upload" 
              accept="image/*" 
              style="display: none;"
            >
            <p class="upload-hint">Recommended: 1000x1000px or larger</p>
          </div>

          <!-- Design Controls -->
          <div class="design-controls" style="display: none;">
            <button type="button" id="remove-design" class="control-button">Remove Design</button>
            <button type="button" id="center-design" class="control-button">Center Design</button>
          </div>
        </div>

        <!-- Instructions -->
        <div class="mockup-instructions">
          <h3>How to use:</h3>
          <ol>
            <li>Upload your design file (PNG, JPG, SVG)</li>
            <li>Drag, resize, and rotate your design on the product</li>
            <li>Change product colors to see your design on different variants</li>
            <li>Add to cart when you're happy with the result</li>
          </ol>
        </div>
      </div>
    </div>
  </div>

  <style>
    .mockup-builder-section {
      padding: 2rem 0;
      background: #f8f9fa;
    }

    .mockup-builder-container {
      max-width: 1200px;
      margin: 0 auto;
    }

    .mockup-builder-header {
      text-align: center;
      margin-bottom: 2rem;
    }

    .mockup-builder-title {
      font-size: 2rem;
      margin-bottom: 0.5rem;
    }

    .mockup-builder-description {
      color: #666;
      font-size: 1.1rem;
    }

    .mockup-builder-content {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 2rem;
      align-items: start;
    }

    .product-image-container {
      position: relative;
      width: 100%;
      height: {{ section.settings.canvas_height }}px;
      border: 2px solid #ddd;
      border-radius: 8px;
      overflow: hidden;
      background: #fff;
    }

    .product-background-image {
      width: 100%;
      height: 100%;
      object-fit: contain;
      transition: opacity 0.3s ease;
    }

    .canvas-container {
      position: relative;
      width: 100%;
      height: {{ section.settings.canvas_height }}px;
      border: 2px solid #ddd;
      border-radius: 8px;
      overflow: hidden;
      background: #fff;
    }

    #design-canvas {
      width: 100%;
      height: 100%;
      cursor: crosshair;
    }

    .upload-controls {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      text-align: center;
      z-index: 10;
    }

    .upload-button {
      display: inline-flex;
      flex-direction: column;
      align-items: center;
      padding: 1rem 2rem;
      background: #007bff;
      color: white;
      border-radius: 8px;
      cursor: pointer;
      transition: background 0.3s ease;
    }

    .upload-button:hover {
      background: #0056b3;
    }

    .upload-icon {
      font-size: 2rem;
      margin-bottom: 0.5rem;
    }

    .upload-text {
      font-weight: 600;
    }

    .upload-hint {
      margin-top: 0.5rem;
      font-size: 0.9rem;
      color: #666;
    }

    .design-controls {
      position: absolute;
      bottom: 1rem;
      left: 1rem;
      display: flex;
      gap: 0.5rem;
    }

    .control-button {
      padding: 0.5rem 1rem;
      background: #6c757d;
      color: white;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      font-size: 0.9rem;
    }

    .control-button:hover {
      background: #545b62;
    }

    .mockup-instructions {
      grid-column: 1 / -1;
      background: white;
      padding: 1.5rem;
      border-radius: 8px;
      border: 1px solid #ddd;
    }

    .mockup-instructions h3 {
      margin-bottom: 1rem;
      color: #333;
    }

    .mockup-instructions ol {
      margin: 0;
      padding-left: 1.5rem;
    }

    .mockup-instructions li {
      margin-bottom: 0.5rem;
      color: #666;
    }

    @media (max-width: 768px) {
      .mockup-builder-content {
        grid-template-columns: 1fr;
        gap: 1rem;
      }

      .product-image-container,
      .canvas-container {
        height: 400px;
      }

      .mockup-builder-title {
        font-size: 1.5rem;
      }
    }
  </style>

  <!-- Load Mockup Builder JavaScript -->
  <script src="{{ 'mockup-builder.js' | asset_url }}"></script>
{%- endif -%}

{% schema %}
{
  "name": "Mockup Builder",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_mockup_builder",
      "label": "Show Mockup Builder",
      "default": true
    },
    {
      "type": "range",
      "id": "canvas_width",
      "min": 400,
      "max": 800,
      "step": 50,
      "unit": "px",
      "label": "Canvas Width",
      "default": 700
    },
    {
      "type": "range",
      "id": "canvas_height",
      "min": 400,
      "max": 800,
      "step": 50,
      "unit": "px",
      "label": "Canvas Height",
      "default": 700
    }
  ],
  "presets": [
    {
      "name": "Mockup Builder"
    }
  ]
}
{% endschema %} 